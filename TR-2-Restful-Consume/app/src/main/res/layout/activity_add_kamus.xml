<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical" >
    <EditText
        android:id="@+id/inpTxtIndonesia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/indo"
        android:autofillHints="@string/indo"
        android:inputType="text" />
    <EditText
        android:id="@+id/inpTxtInggris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ing"
        android:autofillHints="@string/ing"
        android:inputType="text" />
    <EditText
        android:id="@+id/inpTxtJawa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/jawa"
        android:autofillHints="@string/jawa"
        android:inputType="text" />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/send"
        android:onClick="sentKamus"/>
</LinearLayout>
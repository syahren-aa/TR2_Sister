<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/txtInpKata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Kata"/>

    <LinearLayout
        android:paddingRight="2pt"
        android:paddingLeft="2pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/bahasaAwal"
            android:entries="@array/daftar_kata"
            android:layout_width="70pt"
            android:layout_height="wrap_content"/>



        <Spinner
            android:id="@+id/bahasaAkhir"
            android:entries="@array/daftar_kata"
            android:layout_width="70pt"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terjemahkan"
        android:onClick="terjemahan"/>

    <TextView
        android:id="@+id/txtHasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>